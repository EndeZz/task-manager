mixin sidebar(className, items)
  aside(class=`${className}`)
    div(class=`${className}__wrapper`)
      ul(class=`${className}__list`)
        for item in items ? items : []
          li(class=`${className}__item`) 
            span(class=`${className}__item-descr`) Задача создана
            span(class=`${className}__item-separator`)
            span(class=`${className}__item-text`)=`${item.dateStart}`
          li(class=`${className}__item`)
            span(class=`${className}__item-descr`) Срок выполнения
            span(class=`${className}__item-separator`)
            span(class=`${className}__item-text`)=`${item.dateEnd}`
          li(class=`${className}__item`)
            span(class=`${className}__item-descr`) Опубликовал
            span(class=`${className}__item-separator`)
            span(class=`${className}__item-text`)=`${item.published}`
          li(class=`${className}__item`)
            span(class=`${className}__item-descr`) Ответственный
            span(class=`${className}__item-separator`)
            span(class=`${className}__item-text`)=`${item.assignee}`