mixin navigation(className, items, activeItem)
    nav(class=`${className}`)
        ul(class=`${className}__list`)
          each nav, ndx in items
              li(class=`${className}__item`)
                  a(href=`${nav.href}` class=`${className}__item-link ${(ndx === activeItem) ? `${className}__item-link--active` : ''}`)=nav.text