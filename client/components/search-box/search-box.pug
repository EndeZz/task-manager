include ../svg-icon/svg-icon
include ../button/button

mixin search-box(className, label = 'Поиск', placeholder = 'Введите название имя исполнителя')
  div(class='search-box ' + className)
    label.search-box__label(for = 'search')=label
    .search-box__input-inner
      input.search-box__input(id = 'search', type='text', name='author' placeholder= placeholder)
      span.search-box__icon
        +icon('search')
      +btnCancel('search-box__btn')
