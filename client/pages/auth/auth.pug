include ../../components/button-with-text/button-with-text

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon" href="../../../public/img/icons/logo.svg" type="image/svg")
    title Выпускная работа
  body 
    main.main
      .container
        .content
          img.content__icon(src='../../../public/img/icons/logo.svg' alt='Логотип сайта')
          .login-box
            h1.login-box__title Вход
            p.label.login-box__text E-mail
            input.login-box__input(type="text" placeholder="Введите e-mail")
            p.label.login-box__text Пароль
            input.login-box__input(type="password" placeholder="Введите e-mail")
            +button-with-text('login')
