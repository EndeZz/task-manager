include ../../components/header/header
include ../../components/button-task/button-task
include ../../components/media-button/media-button
include ../../components/button-with-text/button-with-text
include ../../components/type/type
include ../../components/files/files
include ../../components/format-file/format-file

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon" href="../../../public/img/icons/logo.svg" type="image/svg")
    title Выпускная работа
  body 
    +header('admin', 3, 'Семён Щеглов', '../../../public/img/users/1.jpg')
    main.main
      .container
        .nav
          .nav__back 
            +media-button("back")
            p.content__title.nav__title К списку задач
          .nav__button 
            +button-with-text('confirm')
            +button-task('big', 'edit')
            +button-task('big', 'delete')
        .content 
          section.content__main 
            .card-task 
              .card-task__info 
                +types('video')
                p.content__title.card-task__status.card-task__status_inWork В работе
              h2.card-task__title Заголовок задачи с другой стороны консультация с широким активом позволяет
              p.card-task__description Не следует, однако забывать, что постоянный количественный рост и сфера нашей активности позволяет оценить значение форм развития. Значимость этих проблем настолько очевидна, что новая модель организационной деятельности требуют от нас анализа системы обучения кадров, соответствует насущным потребностям. Товарищи! постоянный количественный рост и сфера нашей активности требуют определения и уточнения позиций, занимаемых участниками в отношении поставленных задач. Повседневная практика показывает, что постоянный количественный рост и сфера нашей активности в значительной степени обуславливает создание системы обучения кадров, соответствует насущным потребностям.
              p.label.card-task__label Файлы
              +file-list('zip', 'Материалы.zip', '65 Мб')
              +file-list('doc', 'Техническое задание.doc', '215 Кб')
            
            
            //- Блок коментариев и контента
            .task-data
              //- блок для вложенностей
              .task-data__content-box 
                .task-data__title 
                  h3 Результат
                  p.task-data__format-text Допустимые форматы:
                  +format('video')
                .task-data__content 
                  .task-data__img-box

                  //- шаблон для выбранных файлов
                  template#content 
                    .task-data__big-container 
                      .task-data__container 
                        img.task-data__img(src="", alt="")
                      .task-data__img-button
                        svg.task-data__img-cross
                          use(xlink:href="../../../public/img/icons/button-sprite.svg#cross")  

                  input#input-file.file__input(type="file", name="")
                  label.file__label(for="input-file") 
                    svg.img-cross
                      use(xlink:href="../../../public/img/icons/button-sprite.svg#cross")

              //- блок для комментрариев
              .task-data__comment-box
                .box-comment
                  textarea.box-comment__new-comment(placeholder="Введите сообщение...")
                  button.button.box-comment__btn Отправить
                .box-list-comment
                  include ../../components/comment/comment

          //- Боковая панель
          aside.content__aside
            .task-info 
              span.task-info__tag Задача создана
              .task-info__border 
              span.task-info__value 05.02.2020
            .task-info 
              span.task-info__tag Срок выполнения
              span.task-info__border 
              span.task-info__value 11.02.2020
            .task-info 
              span.task-info__tag Опубликовал
              .task-info__border 
              span.task-info__value Семён Щеглов
            .task-info 
              span.task-info__tag Ответственный
              span.task-info__border 
              span.task-info__value Станислав Щукин
