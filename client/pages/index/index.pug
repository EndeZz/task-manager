block content
  main.page-main
    .wrap
      section.cards
        form.cards__form
          +search-box('cards__form-column')
          +date-box('cards__form-column')
          +fieldset('cards__form-column','Тип контента','video','photo','audio')
        .cards__list-inner
          ul.cards__list
            each card in cards
              li.cards__item
                +content-card(card)
          +loader&attributes({'class': 'cards__filters-loader'})
        .cards__scroll-loader-inner
          +loader&attributes({'class': 'cards__scroll-loader'})

block append content
  +modal('media')

  template(id='content-card')
    +content-card(cards[0])
  template(id='audio-player')
    +player('audio')
  template(id='video-player')
    +player('video')

