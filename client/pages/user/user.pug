include ../../components/header/header
include ../../components/user-avatar/user-avatar
include ../../components/media-button/media-button
include ../../components/button-with-text/button-with-text
include ../../components/select/select
include ../../components/input/input

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon" href="../../../public/img/icons/logo.svg" type="image/svg")
    title Выпускная работа
  body 
    +header('admin', 3)
    main.main
      .container
        .nav
          +media-button("back")
          h1 Пользователь
        .profile 
          .profile__image-box 
            +avatar('big')
            +button-with-text('download')
          .profile__info
            p.label.profile__tag Имя, фамилия
            input.profile__input.profile__input_name(placeholder="Введите имя и фамилию" name="name")
            p.label.profile__tag E-mail
            input.profile__input.profile__input_email(placeholder="Введите e-mail" name="email")
            +select-role
            +input('password', 'Пароль', 'Введите пароль', 'password', 'password')
            .profile__button-box
              +button-with-text('save')
          