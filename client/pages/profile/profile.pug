include ../../components/buttons/buttons
include ../../components/input/input
include ../../components/header/header
include ../../components/heading/heading
include ../../components/photo/photo

html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon", href="/public/icons/logo.svg", type="image/x-icon")
    title Профиль
  body 
    +header 
  
    section.account
      +heading('Профиль')

      .account__information
        +photo
        
        .account__information__inputs
          +input({type: 'text', label: 'Имя, фамилия', placeholder: 'Введите имя и фамилию', id: 'user'})
          +input({type: 'text', label: 'E-mail', placeholder: 'Введите e-mail', id: 'email'})

          .account__information__inputs__buttons
            +button_main('save', 'blue', 'Сохранить')
            +button_big('delete', 'red', 'Удалить профиль')


