mixin cardsTasks(className, items)
  div(class="wrapper__cards")
    each item in items
      div(class=`${className}`)
        a(class=`${className}-wrapper` href="#")
          div(class=`${className}-wrapper__content`)
            block contentType
                +contentType("content__box", item)
            p(class=`${className}-descr__text`)=`${item.text}`
          div(class=`${className}-status`)
            span(class=`${className}-status__auth`)=`${item.author}`
            date(class=`${className}-status__due`)=`${item.date}`
            span(class=`${className}-status__text ${item.status}`)=`${item.statusText}`
          div(class=`${className}-buttons`)
              include ./buttons
              if `${item.btnCount}` === 'true'
                  +button("btn__kit", "card__tasks-button", "edit-small")
                  +button("btn__kit", "card__tasks-button", "delete")
              else
                  +button("btn__kit", "card__tasks-button", "delete")