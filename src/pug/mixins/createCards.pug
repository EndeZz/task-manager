mixin cards(className, items)
    div(class=`${className}`)
      div(class=`${className}__wrapper`)
        ul(class=`${className}__list`)
          each item in items 
            li(class=`${className}__item`)
              figure(class=`${className}__item-wrapper`)
                img(class=`${className}__item-img` src=`../../assets/images/cards/${item.img}` alt=`${item.altText}`)
                figcaption(class=`${className}-descr`)
                  a(class=`${className}__item-title` href="#")
                    block contentType
                        +contentType("content__box", item)
                  p(class=`${className}__item-descr`)=`${item.text}`
                  div(class=`${className}__item-meta`)
                    span(class=`${className}__item-author`)=`${item.author}`
                    time(class=`${className}__item-date datetime=${item.date}`)=`${item.date}`
        img(class="card__loader" src="../../assets/images/loader.png" alt="иконка голубого круга")